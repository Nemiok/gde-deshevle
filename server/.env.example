# ГдеДешевле — Server Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gdedeshevle

# Redis connection string
REDIS_URL=redis://localhost:6379

# HTTP server port
PORT=3001

# CORS allowed origin (use * to allow all, or specify frontend URL)
CORS_ORIGIN=http://localhost:5173

# Redis cache TTL in seconds (default: 6 hours)
CACHE_TTL=21600

# Max age for prices in hours (default: 8760 = 1 year).
# Set to 24-48 once scrapers are running regularly.
PRICE_MAX_AGE_HOURS=8760
